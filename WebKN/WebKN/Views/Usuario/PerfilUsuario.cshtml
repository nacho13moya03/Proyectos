@model WebKN.Entities.UsuarioEnt

@{
    ViewBag.Title = "PerfilUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Información Personal</h4>

            <form class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Identificación</label>
                    @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control form-control-lg", @placeholder = "Identificación", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Nombre</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", @placeholder = "Nombre", @type = "text" })
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword4">Correo Electrónico</label>
                    @Html.TextBoxFor(m => m.Correo, new { @class = "form-control form-control-lg", @placeholder = "Correo Electrónico", @type = "email" })
                </div>
                <div class="form-group">
                    <label for="exampleSelectGender">Dirección</label>
                    @Html.DropDownListFor(m => m.DescripcionProvincia, ViewBag.Direcciones as List<SelectListItem>, new { @class = "form-control form-control-lg" }) 
                </div>
   
                <button type="submit" class="btn btn-primary mr-2">Procesar</button>
            </form>
        </div>
    </div>
</div>

